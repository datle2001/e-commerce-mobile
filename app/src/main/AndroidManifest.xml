            android:label="@string/title_activity_payments" />
        <activity
            android:name=".ui.mainActivity.account.personalInfo.PersonalInfoActivity"
            android:exported="false"
            android:label="@string/title_activity_personal_info" />
        <activity
            android:name=".ui.mainActivity.shopping.productDetail.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.mainActivity.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>